<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="battletech.com.battletech" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="com.google.android.providers.gsf.permission.READ_GSERVICES" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".activity.BattleTechActivitySplash"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/facebook_app_id" />

        <activity android:name="com.facebook.LoginActivity" />
        <activity
            android:name=".activity.BattleTechActivityLogin"
            android:label="@string/title_activity_login_activity" >
        </activity>
        <activity
            android:name=".activity.BattleTechActivityTwitter"
            android:label="@string/title_activity_login_activity" >
        </activity>
        <activity
            android:name=".BattleTechActivityMain"
            android:label="@string/title_activity_main" >
        </activity>
        <activity
            android:name=".BattleTechActivityRegister"
            android:label="@string/title_activity_register" >
        </activity>
        <activity
            android:name=".BattleTechActivitySignIn"
            android:label="@string/title_activity_sign_in" >
        </activity>
        <activity
            android:name=".ChoosePokemonActivity"
            android:label="@string/title_activity_choose_pokemon" >
        </activity>
        <activity
            android:name=".MapsActivity"
            android:label="@string/title_activity_maps" >
        </activity>

        <meta-data
            android:name="com.google.android.gms.version"
            android:value="@integer/google_play_services_version" />
        <meta-data
            android:name="com.google.android.maps.v2.API_KEY"
            android:value="@string/google_maps_key" />

        <activity
            android:name=".BattleActivity"
            android:label="@string/title_activity_battle" >
        </activity>
        <activity
            android:name=".DetailActivity"
            android:label="@string/title_activity_detail" >
        </activity>
        <activity
            android:name=".AdvanceSearch"
            android:label="@string/title_activity_advance_search" >
        </activity>
    </application>

    <uses-feature
        android:glEsVersion="0x00020000"
        android:required="true" />

</manifest>
