<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:tools="http://schemas.android.com/tools"
android:orientation="horizontal"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/Fondo"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageButton
        android:layout_width="291dp"
        android:layout_height="500dp"
        android:id="@+id/imageButton"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/background"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        style="@style/tooltip_bubble_text"
        android:adjustViewBounds="false" />



    <com.facebook.widget.LoginButton
        android:id="@+id/authButton"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:textSize="@android:dimen/app_icon_size"
        android:textColor="@color/LetraColor"
        android:background="@color/BotonColor"
        android:layout_margin="5dp" />


    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sign in with Twitter"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:onClick="OpenTwitter"
        android:id="@+id/xBLoginTwiiter"
        android:background="@color/BotonColor"
        android:textColor="@color/Fondo"
        android:layout_margin="5dp" />
    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Create Account with Battle Tech"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:onClick="OpenRegister"
        android:id="@+id/xBLoginCreate"
        android:background="@color/BotonColor"
        android:textColor="@color/Fondo"
        android:layout_margin="5dp" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Log in with Battle Tech"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.04"
        android:onClick="SingInBattleTech"
        android:id="@+id/xBLoginSignIn"
        android:background="@color/BotonColor"
        android:textColor="@color/Fondo"
        android:layout_margin="5dp" />


</LinearLayout>

</LinearLayout>