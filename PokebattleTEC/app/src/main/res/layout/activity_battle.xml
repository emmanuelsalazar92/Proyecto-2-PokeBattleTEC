<LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:weightSum="1"
    android:background="@color/Fondo">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.85"
        android:stretchColumns="0,1">

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/xTVTittle"
                android:layout_column="0"

                android:textSize="@dimen/LabelBattle"
                android:textColor="@color/LetraColor" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">



            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/pbprogresoEnemigo"
                android:max="100"
                android:background="@color/Fondo"
                android:indeterminate="false"
                android:maxHeight="55px"
                android:minHeight="55px"
                ></ProgressBar>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="100/100"
                android:id="@+id/puntosenemigo"
                android:layout_column="0"
                android:textSize="@dimen/LabelBattle"
                android:gravity="center|center_vertical"
                android:textColor="@color/LetraColor" />

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgEnemigo"
                android:layout_column="1"
                android:src="@drawable/p001"
                android:background="@color/Fondo" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="Large Text"
                android:id="@+id/xTVEmailSign"
                android:layout_column="1"

                android:textSize="@dimen/LabelBattle"
                android:gravity="bottom"
                android:textColor="@color/LetraColor" />
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ProgressBar
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/pbprogresoNuestro"
                android:max="100"
                android:background="@color/Fondo"
                android:indeterminate="false"
                android:layout_column="1"
                android:maxHeight="55px"
                android:minHeight="55px"/>
        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/imgNuestro"
                android:layout_column="0"
                android:src="@drawable/p022"
                android:background="@color/Fondo" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="100/100"
                android:id="@+id/puntosnuestro"
                android:layout_column="1"
                android:textSize="@dimen/LabelBattle"
                android:gravity="center|center_vertical"
                android:textColor="@color/LetraColor" />

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>

        <TableRow
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

        </TableRow>
    </TableLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Attack"
            android:id="@+id/button2"
            android:textSize="@dimen/LabelBattle"
            android:onClick="BattleAttack"
            android:textColor="@color/Fondo"
            android:background="@color/BotonColor" />
    </LinearLayout>
</LinearLayout>